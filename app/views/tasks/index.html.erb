<h1>トップページ</h1>
<p>（ログインユーザ : <%= current_user.name %>)</p>
  <ul>
    
    <% @tasks.each do |task| %>
      【<%= link_to task.id, task %>】（<%= task.user.name %>）<span>　posted at <%= task.created_at %></span>
      <ul style="list-style: none;">
        <li> <%= task.content %>　：　<%= task.status %></li>
      </ul>
    <% end %>
  </ul>
  <%= link_to '新規タスクの登録', new_task_path %>
  <%= link_to 'ログアウト', logout_path, method: :delete %>